# Factorial - both recursive and iterative versions

# Recursive factorial
def factorial_rec(n) {
    if (n <= 1) {
        return 1
    } else {
        return n * factorial_rec(n - 1)
    }
}

# Iterative factorial
def factorial_iter(n) {
    result = 1
    while (n > 1) {
        result = result * n
        n = n - 1
    }
    return result
}

# Both should return 120
factorial_rec(5)

